<div class="container">
    <div class="pure-g-r" id="layout">
<%= erb :_nav, layout: false %>
        <div class="pure-u-1">
            <div class="content">
                <!-- A wrapper for all the items -->
                <div class="posts">
                    <h1 class="content-subhead">Decks</h1>

                    <% @decks.each do |deck| %>
                    <section class="post">
                        <header class="post-header">
                            <img class="post-avatar" alt="Disa Johnson's avatar" src="/img/common/disa-johnson.jpg" height="48" width="48">

                            <h2 class="post-title"><%= deck.title %></h2>

                            <p class="post-meta">
                                By <a href="#" class="post-author">Disa Johnson</a> under <a class="post-category post-category-design" href="#">Intellectual</a> <a class="post-category post-category-pure" href="#">Games</a>
                            </p>
                        </header>

                        <div class="post-description">
                            <p><%= deck.description %></p>
                            <p>Play <a href="/rounds/1/<%= deck.id %>/1"><%= deck.title %></a> now!</p>
                        </div>
                    </section>
                    <% end %>

                </div>
<%= erb :_footer, layout: false %>

